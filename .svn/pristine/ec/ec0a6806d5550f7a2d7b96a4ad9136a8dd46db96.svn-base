        </el-table>
      </div>
      <div style="float: right">
        <el-pagination @current-change="handleCurrentChange" @size-change="handleSizeChange"
                       :current-page="formData.pageIndex" :page-sizes="[10, 20, 50, 100]" :page-size="formData.pageSize"
                       layout="total, sizes, prev, pager, next, jumper" :total="totalCount"></el-pagination>
      </div>
    </div>
    <div v-show="!showList">
      <orderDetails :detailData="detailData"></orderDetails>
    </div>

  </div>
</template>

<script>
  import orderDetails from "./orderDetails.vue";

  export default {
    components: {
      orderDetails
    },
    data() {
      return {
        totalCount: 0,
        showList: true,
        tableData: [],
        detailData: {},
        channelList: [],
        formData: {
          pageIndex: 1,
          pageSize: 10,
          productName: "",
          customerName: "",
          phone: "",
          name: "",
          platformType: "",
          promotionChannel: "",
          submitWay: "",
          submitType: "",
          claimState:"",
          sequence:""//分发次序
        }
      };
    },
    methods: {
      search() {
        this.formData.pageIndex = 1;
        this.getOrderList();
      },
      handleSizeChange(val) {
        this.formData.pageSize = val;
        this.formData.pageIndex = 1;
        this.getOrderList();
      },
      handleCurrentChange(val) {
        this.formData.pageIndex = val;
        this.getOrderList();
      },
      getpromotionchannelitem() {
        let param = {param: {platformType: this.formData.platformType}};
        this.$api.vkcPost("supermarketloan/mgr/loanapply/getpromotionchannelitem", param, res => {
          this.formData.promotionChannel = "";
          this.channelList = res;
        });
      },
      getOrderList() {
        this.$api.vkcPost2(
          "supermarketloan/crm/order/pageOrder",
          this.formData,
          res => {
            this.totalCount = res.totalCount;
            this.tableData = res.data;
          },
          "getAllData"
        );
      },
      details(id) {
        this.$api.vkcPost2("supermarketloan/crm/order/orderDetail", {orderId: id}, res => {
          this.detailData = res;
          this.showList = false;
        });
      }
    },
    created() {
      this.getpromotionchannelitem();
      this.getOrderList();
    }
  };
</script>
