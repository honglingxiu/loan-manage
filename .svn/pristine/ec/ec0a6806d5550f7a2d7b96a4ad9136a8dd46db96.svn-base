          </el-table-column>
          <el-table-column prop="claimState" label="认领状态" align='center'>
            <template slot-scope="scope">
              <span v-if="scope.row.claimState==='0'" class="c409EFF">待认领</span>
              <span v-if="scope.row.claimState==='1'" class="c409EFF">已认领</span>
            </template>
          </el-table-column>
