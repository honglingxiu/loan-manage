    audioObj: new Audio(),
    audioPlay(url, cb) {
        if (this.audioObj.src !== url) {
            this.audioObj.src = url;
            this.audioObj.oncanplay = () => {
                this.audioObj.play();
            };
        } else {
            this.audioObj.play();
        }
        this.audioObj.onended = cb;
    },
    audioPause() {
        this.audioObj.pause();
    },
    /**
     * 列表序号处理
     * @param pageIndex 当前页
     * @param pageSize  每页记录数
     * @returns {*}
     * @constructor
     */
    IndexMethod(pageIndex, pageSize) {
        var index = 0;
        return (pageIndex - 1) * pageSize + index + 1;
    }
